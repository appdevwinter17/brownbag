<div class="page-header">
  <h3>Invitation #<%= @invitation.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd><%= @invitation.user_id %></dd>

      <dt>Event</dt>
      <dd><%= @invitation.event_id %></dd>

      <dt>Host approval</dt>
      <dd><%= @invitation.host_approval %></dd>

      <dt>Guest approval</dt>
      <dd><%= @invitation.guest_approval %></dd>

      <dt>Confirmed reservation</dt>
      <dd><%= @invitation.confirmed_reservation %></dd>

      <dt>Public request</dt>
      <dd><%= @invitation.public_request %></dd>

      <dt>Title</dt>
      <dd><%= @invitation.title %></dd>

      <dt>Description</dt>
      <dd><%= @invitation.description %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/invitations" class="btn btn-primary">
        Back
      </a>
      <a href="/invitations/<%= @invitation.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_invitation/<%= @invitation.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
